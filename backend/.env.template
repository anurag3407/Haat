# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vendor-supply-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Server Configuration
NODE_ENV=development
PORT=5000

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Google Maps Configuration (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password-or-app-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Payment Gateway Configuration (if implemented)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# SMS Configuration (for OTP verification)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Redis Configuration (for caching, if implemented)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Log Level Configuration
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_GROUP_BUYING=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
